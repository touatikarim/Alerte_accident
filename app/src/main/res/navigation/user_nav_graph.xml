<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/user_nav_graph"
            app:startDestination="@id/home_dest"
>
    <fragment android:id="@+id/home_dest"
              android:name="com.example.alertaccident.ui.home.Home"
              android:label="Home"
              tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_home_dest_to_map_dest" app:destination="@id/map_dest"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment android:id="@+id/alerts_dest"
              android:name="com.example.alertaccident.ui.alerts.Alerts"
              android:label="Alerts"
              tools:layout="@layout/fragment_alerts">
        <action android:id="@+id/action_alerts_dest_to_home_dest" app:destination="@id/home_dest"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment android:id="@+id/map_dest"
              android:name="com.example.alertaccident.ui.map.Map"
              android:label="Map"
              tools:layout="@layout/fragment_map">
        <action android:id="@+id/action_map_dest_to_alerts_dest" app:destination="@id/alerts_dest"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment android:id="@+id/settings_dest" android:name="com.example.alertaccident.ui.settings.Settings"
              android:label="Settings" tools:layout="@layout/fragment_settings">
        <action android:id="@+id/action_settings_dest_to_update_profile" app:destination="@id/update_profile"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"/>
        <action android:id="@+id/action_settings_dest_to_reset_pass" app:destination="@id/reset_pass"/>
    </fragment>
    <fragment android:id="@+id/update_profile" android:name="com.example.alertaccident.ui.update.Update_profile"
              tools:layout="@layout/fragment_update_profile" android:label="Settings"/>
    <fragment android:id="@+id/reset_pass" android:name="com.example.alertaccident.ui.resetpassword.Reset_pass"
              android:label="fragment_reset_pass" tools:layout="@layout/fragment_reset_pass"/>
</navigation>