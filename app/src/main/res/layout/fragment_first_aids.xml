<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.firstaids.FirstAids">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Interface.MainActivity"
            android:orientation="vertical"
            tools:ignore="UselessParent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">
            <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/aids"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">
                <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                <TextView
                        android:id="@+id/cardia_arrest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:text="@string/arrest"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:text="@string/arrest_details"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    <ImageView
                            android:id="@+id/cardiac_details"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/cardiac"
                            tools:ignore="ContentDescription"/>
                </LinearLayout>
                <ImageView
                       android:layout_gravity="end"
                        android:id="@+id/details_frag"
                       android:layout_marginTop="15dp"
                        android:src="@drawable/ic_arrow_forward_black_24dp"
                        android:focusable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">
                <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/Bleeding"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:text="@string/bleeding"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    <LinearLayout

                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content"
                            tools:ignore="ExtraText">
                        <TextView
                                android:id="@+id/bleeding"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:text="@string/bleeding_details"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        <ImageView
                                android:id="@+id/bleeding_details"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/bleeding"
                                tools:ignore="ContentDescription"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_gravity="end"
                            android:id="@+id/bleeding_frag"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">
                <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/Burns"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:text="@string/burns"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    <LinearLayout

                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content"
                            tools:ignore="ExtraText">
                        <TextView
                                android:id="@+id/burns"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:text="@string/burn_details"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        <ImageView
                                android:id="@+id/discomfort_details"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/cardiacdiscomfort"
                                tools:ignore="ContentDescription"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_gravity="end"
                            android:id="@+id/discomfort_frag"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">
                <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/Suffocation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:text="@string/suffocation"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    <LinearLayout

                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content"
                            tools:ignore="ExtraText">
                        <TextView
                                android:id="@+id/suffocation"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:text="@string/suffocation_details"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        <ImageView
                                android:id="@+id/choking_details"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/choking"
                                tools:ignore="ContentDescription"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_gravity="end"
                            android:id="@+id/chkoking_frag"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">
                <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/Unconsciousness"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:text="@string/unconsciousness"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    <LinearLayout

                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content"
                            tools:ignore="ExtraText">
                        <TextView
                                android:id="@+id/unconsciousness"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:text="@string/unconsciousness_details"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        <ImageView
                                android:id="@+id/fainting_details"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/fainting"
                                tools:ignore="ContentDescription"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_gravity="end"
                            android:id="@+id/fainting_frag"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>

</FrameLayout>