<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.Vehicule.Add_Vehicle">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Interface.MainActivity"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true" tools:ignore="UselessParent">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    tools:ignore="RedundantNamespace">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >
                <ImageButton
                        android:id="@+id/user_profile_photo"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/user_profile_image_background"
                        android:src="@mipmap/mobelite_round" android:contentDescription="@string/logo"/>


                <LinearLayout
                        android:paddingTop="10dp"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/login_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal"
                            android:text="@string/add_vehicle"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/twitter_blue"
                            android:hint="@string/matricule">
                        <EditText
                                android:id="@+id/id_matricule"
                                android:drawableTint="@color/twitter_blue"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_credit_card_black_24dp"
                                android:padding="12dp"
                                tools:targetApi="m"
                                tools:ignore="Autofill,LabelFor"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/number_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/twitter_blue"
                            android:hint="@string/car">
                        <EditText
                                android:id="@+id/id_car"
                                android:drawableTint="@color/twitter_blue"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_directions_car_black_24dp"
                                android:padding="12dp"
                                tools:targetApi="m"
                                tools:ignore="Autofill,LabelFor"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/color_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/twitter_blue"
                            android:hint="@string/color">
                        <EditText
                                android:id="@+id/id_color"
                                android:drawableTint="@color/twitter_blue"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_color_lens_black_24dp"
                                android:padding="12dp"
                                tools:targetApi="m"
                                tools:ignore="Autofill,LabelFor"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/assurance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/twitter_blue"
                            android:hint="@string/assurance">
                        <EditText
                                android:id="@+id/id_assurance"
                                android:drawableTint="@color/twitter_blue"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_color_lens_black_24dp"
                                android:padding="12dp"
                                tools:targetApi="m"
                                tools:ignore="Autofill,LabelFor"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginBottom="70dp"
                                  android:layout_marginTop="30dp"
                                  android:orientation="vertical">
                        <TextView
                                android:id="@+id/doors"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="start"
                                android:text="@string/car_doors"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"/>

                        <nl.dionsegijn.steppertouch.StepperTouch
                                android:id="@+id/stepperTouch_doors"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:layout_gravity="center"
                                app:stepperBackgroundColor="@color/twitter_blue"
                        />
                        <TextView
                                android:id="@+id/nbr_doors"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"/>

                    </LinearLayout>
                    <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="22dp"
                            android:background="@drawable/buttonshape"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp"

                    />
                    <ProgressBar
                            android:id="@+id/submit_car"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:layout_marginTop="8dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>