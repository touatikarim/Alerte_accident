<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        app:cardBackgroundColor="@color/darker_shade"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">


    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText,UseCompoundDrawables,UselessParent">


        <ProgressBar
                android:id="@+id/load_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:layout_marginTop="10dp"/>
        <ImageView
                android:layout_marginBottom="8dp"
                android:id="@+id/accident_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>
        <TextView
                android:id="@+id/desc"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/twitter_blue"
                android:id="@+id/sender_email"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>
        <TextView
                android:id="@+id/service_contactÃ©"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_notifications_active_black_24dp"
                android:drawableTint="@color/twitter_blue"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>
        <TextView
                android:id="@+id/victims"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_accessibility_black_24dp"
                android:drawableTint="@color/twitter_blue"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>

        <TextView
                android:id="@+id/date"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:drawableTint="@color/twitter_blue"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>
        <TextView
                android:id="@+id/location_id"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/lat"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/lng"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:id="@+id/map"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                tools:ignore="ContentDescription"/>

        <!--<TextView-->
                <!--android:id="@+id/check_map"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/check_map"-->
                <!--android:focusable="true"-->
                <!--android:drawableStart="@drawable/ic_directions_black_24dp"-->
                <!--android:drawableTint="@color/twitter_blue"-->
                <!--android:textSize="16sp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:textColor="@color/black" tools:targetApi="m"/>-->





    </LinearLayout>



</androidx.cardview.widget.CardView>


