<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.desactivateAcc.Desactivate_Acc">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Interface.MainActivity"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true" tools:ignore="UselessParent">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


                <ImageButton
                        android:id="@+id/user_profile_photo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/user_profile_image_background"
                        android:src="@mipmap/mobelite_round" android:contentDescription="@string/logo"/>

                <LinearLayout
                        android:paddingTop="10dp"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" tools:ignore="ExtraText">
                    <TextView
                            android:id="@+id/login_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal"
                            android:text="@string/desacacc"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:paddingTop="30dp"
                              android:textColor="@color/black"
                              android:text="@string/confirmpass"
                              android:textSize="20sp"
                              android:textStyle="bold"
                    />

                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:paddingTop="10dp"
                              android:textColor="@color/black"
                              android:text="@string/desac_msg"
                    />

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pass_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            tools:ignore="DuplicateIds">
                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                                android:id="@+id/id_desactivate_pass"
                                android:inputType="textEmailAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:singleLine="true"
                                android:drawableTint="@color/twitter_blue"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                app:drawable_show="@drawable/ic_visibility_black_24dp"
                                app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
                                android:padding="12dp"
                                tools:targetApi="m"
                                tools:ignore="Autofill,LabelFor"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <ProgressBar
                            android:id="@+id/forgot"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:layout_marginTop="8dp"
                    />


                    <ProgressBar
                            android:id="@+id/desac"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:layout_marginTop="8dp"
                    />

                    <Button
                            android:id="@+id/btn_desactivate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="22dp"
                            android:layout_gravity="center_horizontal"

                            android:background="@drawable/buttonshape"
                            android:text="@string/desactivate"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp"

                    />
                    <ProgressBar
                            android:id="@+id/login"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:layout_marginTop="8dp"
                    />
                </LinearLayout>
            </LinearLayout>




        </ScrollView>
    </RelativeLayout>

</FrameLayout>